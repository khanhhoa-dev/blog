<form
    class='mt-4 mx-4'
    method='POST'
    action='/courses/update/{{plainEditCourse._id}}?_method=PUT'
>
    <h2>Chỉnh sửa khóa học</h2>
    <div class='mb-3'>
        <label for='exampleInputEmail1' class='form-label'>Tiêu đề:</label>
        <input
            type='text'
            class='form-control'
            id='exampleInputEmail1'
            aria-describedby='emailHelp'
            name='title'
            value='{{plainEditCourse.title}}'
        />
    </div>
    <div class='mb-3'>
        <label for='exampleInputEmail1' class='form-label'>Mô tả khóa học</label>
        <textarea
            style='width: 100%;'
            name='description'
            placeholder='Nhập mô tả chi tiết...'
        >
            {{plainEditCourse.description}}
        </textarea>
    </div>
    <div class='mb-3'>
        <label for='exampleInputEmail1' class='form-label'>Video Id</label>
        <input
            type='text'
            class='form-control'
            id='exampleInputEmail1'
            aria-describedby='emailHelp'
            name='videoId'
            value='{{plainEditCourse.videoId}}'
        />
    </div>
    <button type='submit' class='btn btn-primary'>Lưu Khóa Học</button>
</form>