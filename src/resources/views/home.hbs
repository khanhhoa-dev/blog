<div class='container'>
    <div class='row'>
        {{#each plainCourse}}
            <div class='col col-sm-6 col-lg-3 mt-4'>
                <div class='card'>
                    <img
                        src='{{this.image}}'
                        class='card-img-top'
                        alt='{{this.title}}'
                    />
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.title}}</h5>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Mua khóa học</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>