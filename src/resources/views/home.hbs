<div class='container'>
    <div class='row'>
        {{#each plainCourse}}
            <div class='col col-sm-6 col-lg-3 mt-4'>
                <div class='card'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            src='{{this.image}}'
                            class='card-img-top'
                            alt='{{this.title}}'
                        />
                    </a>
                    <div class='card-body'>
                        <a
                            href='/courses/{{this.slug}}'
                            style='text-decoration: none;'
                        >
                            <h5
                                class='card-title'
                                style='color: #000;'
                            >{{this.title}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Mua khóa học</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>